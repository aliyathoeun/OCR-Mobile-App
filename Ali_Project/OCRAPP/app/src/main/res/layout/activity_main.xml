<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonCapture"
        app:layout_constraintHeight_percent="0.6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDetect"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="8dp"
        android:layout_marginHorizontal="4dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:iconSize="32dp"
        app:cornerRadius="35dp"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toTopOf="@+id/cardResult"
        app:layout_constraintEnd_toStartOf="@+id/buttonUpload"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"
        android:minWidth="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonUpload"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="8dp"
        android:layout_marginHorizontal="4dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:iconSize="32dp"
        app:cornerRadius="35dp"
        app:icon="@android:drawable/ic_menu_upload"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toTopOf="@+id/cardResult"
        app:layout_constraintEnd_toStartOf="@+id/buttonCapture"
        app:layout_constraintStart_toEndOf="@+id/buttonDetect"
        android:layout_marginBottom="16dp"
        android:minWidth="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCapture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="8dp"
        android:layout_marginHorizontal="4dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:iconSize="32dp"
        app:cornerRadius="35dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toTopOf="@+id/cardResult"
        app:layout_constraintEnd_toStartOf="@+id/buttonDownload"
        app:layout_constraintStart_toEndOf="@+id/buttonUpload"
        android:layout_marginBottom="16dp"
        android:minWidth="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDownload"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="8dp"
        android:layout_marginHorizontal="4dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:iconSize="32dp"
        app:cornerRadius="35dp"
        app:icon="@android:drawable/ic_menu_save"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toTopOf="@+id/cardResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCapture"
        android:layout_marginBottom="16dp"
        android:minWidth="0dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25">

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:hint="Scanned text will appear here"
            android:textSize="16sp"
            android:gravity="top|start"
            android:background="@android:color/white" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>